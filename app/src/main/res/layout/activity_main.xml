<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Theme1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Tile1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/tiledesignetheme3">
        <TextView
            android:id="@+id/bankBalance"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="center"
            android:text="0â‚¬"
            android:textColor="@color/Theme5"
            android:maxLines="1"
            android:layout_centerVertical="true"
            android:padding="20dp"
            app:autoSizeTextType="uniform"
            app:autoSizeMinTextSize="12sp"
            app:autoSizeMaxTextSize="100sp"
            app:autoSizeStepGranularity="2sp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Tile2"
        android:layout_below="@+id/Tile1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/tiledesignetheme2"
        android:translationZ="-1dp">

        <RelativeLayout
            android:layout_width="270dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/transaktionTblBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@android:drawable/presence_away"
                    android:layout_centerHorizontal="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:text="@string/History"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true">
                <ImageView
                    android:id="@+id/ScanBtnMain"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/qrscan"
                    android:layout_centerHorizontal="true"
                    app:tint="@color/Theme5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:text="@string/scan"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">
                <ImageView
                    android:id="@+id/deleteBtn"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/delete"
                    android:layout_centerHorizontal="true"
                    app:tint="@color/red"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:layout_centerHorizontal="true"
                    android:textSize="15sp"
                    android:text="@string/delete"/>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/Tile2"
        android:columnCount="2">
        <RelativeLayout
            android:id="@+id/transaktionBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:textColor="@color/Theme5"
            android:background="@drawable/mybutton">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                android:src="@android:drawable/stat_notify_sync_noanim"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/transaction"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/borrowBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/Theme5"
            android:background="@drawable/mybutton">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/borrowicon"
                android:layout_marginTop="25dp"
                android:layout_centerHorizontal="true"
                app:tint="@color/green"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="15sp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:text="@string/Borrow"/>
            </RelativeLayout>
    </GridLayout>
</RelativeLayout>