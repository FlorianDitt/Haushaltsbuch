<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/Theme1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/Tile1"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tiledesignetheme3">
        <TextView
            android:id="@+id/bankBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0â‚¬"
            android:textColor="@color/Theme5"
            android:textSize="80dp"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Tile2"
        android:layout_below="@+id/Tile1"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/tiledesignetheme2"
        android:translationZ="-1dp">

        <RelativeLayout
            android:layout_width="210dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">
            <ImageView
                android:id="@+id/transaktionBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@android:drawable/stat_notify_sync_noanim"/>
            <ImageView
                android:id="@+id/transaktionTblBtn"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/presence_away"/>
        </RelativeLayout>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_below="@+id/Tile2"
        android:columnCount="2">
        <RelativeLayout
            android:id="@+id/borrowBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:textColor="@color/Theme5"
            android:background="@drawable/mybutton">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/borrowicon"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:tint="@color/green"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/deleteBtn"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:textColor="@color/Theme5"
            android:background="@drawable/mybutton">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/delete"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                app:tint="@color/red"/>
            </RelativeLayout>
    </GridLayout>
</RelativeLayout>